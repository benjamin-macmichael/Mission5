@{
    ViewData["Title"] = "Services";
}
<h1>@ViewData["Title"]</h1>

<div class="form-group">
    <label for="hours">Enter the number of hours you need:</label>
    <input type="number" class="form-control" id="hours" min="0" required>
</div>

<div class="form-group">
    <label>Charge per hour:</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" id="chargePerHour" value="10" readonly>
    </div>
</div>

<div class="mb-3">
    <button class="btn btn-primary" id="calculateBtn">Calculate Total</button>
</div>

<div class="form-group">
    <label for="total">Total:</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" id="total" readonly>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
</div>

