@{
    ViewData["Title"] = "Services";
}
<h1>@ViewData["Title"]</h1>

<!--This is the services page with the form for the user to calculate how much my services would cost them-->
<div class="form-group">
    <label for="hours">Enter the number of hours you need:</label>
    <input type="number" class="form-control" id="hours" min="0" required>
</div>

<div class="form-group">
    <label>Charge per hour:</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" id="chargePerHour" value="10" readonly>
    </div>
</div>
<br />
<div class="mb-3">
    <button class="btn btn-primary" id="calculateBtn">Calculate Total</button>
</div>

<div class="form-group">
    <label for="total">Total:</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" id="total" readonly>
    </div>
</div>

<br />
<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
</div>
<br />
<div class="container-fluid d-flex justify-content-center bg-light">
    <img src="~/img/services.jpg" class="img-fluid" alt="Setup Image" />
</div>
<br />
<div>
    <p>Please contact me at benjaminmac21@gmail.com for requests.</p>
</div>

